{
  "inbox_dir": "inbox",
  "out_dir": "out",
  "done_dir": "done",
  "output_suffix": "_fmt",
  "output_extension": "jpg",
  "canvas": {
    "width": 2160,
    "height": 2700
  },
  "foreground": {
    "paper_scale_mode": "golden",
    "paper_scale_override": null
  },
  "background": {
    "bg_safe_crop": {
      "l": 0.1,
      "r": 0.1,
      "t": 0.1,
      "b": 0.22
    },
    "bg_extra_scale": 1.35,
    "brightness": 0.82,
    "saturation": 0.75
  },
  "sharpen_enabled": true,
  "sharpen_target": "foreground",
  "sharpen_radius": 1.6,
  "sharpen_percent": 150,
  "sharpen_threshold": 3,
  "jpeg_quality": 92,
  "move_processed_to_done": true,
  "supported_extensions": [
    ".jpg",
    ".jpeg",
    ".png",
    ".webp"
  ],
  "logo": {
    "enabled": true,
    "placement": "bottom_right",
    "custom_xy_ratio": [
      0.9,
      0.93
    ],
    "margin_ratio": 0.035,
    "scale_ratio": 0.06,
    "gap_ratio": 0.012,
    "opacity": 0.9,
    "brand": {
      "type": "image",
      "image_path": "assets/logos/polaroid.png",
      "text": "Polaroid"
    },
    "model": {
      "type": "text",
      "image_path": null,
      "text": "Now+"
    },
    "text_color": [
      255,
      255,
      255
    ],
    "font_path": "assets/fonts/Inter-SemiBold.ttf"
  }
}
